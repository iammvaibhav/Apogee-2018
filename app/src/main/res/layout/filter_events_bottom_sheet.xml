<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/filterEvents"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="500dp">

    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/ic_close"
        android:padding="15dp"
        android:visibility="gone"
        android:layout_marginRight="7dp"/>

    <TextView
        android:id="@+id/filterEventsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILTER EVENTS"
        android:textColor="#fff"
        android:textSize="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/showByText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW BY"
        android:textColor="#fff"
        android:textSize="14dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"/>

    <View
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"/>

    <ToggleButton
        android:id="@+id/showByDate"
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/toggle_button"
        android:textOn="DATE"
        android:textOff="DATE"
        android:textColor="@color/toggle_text"
        android:textSize="12dp"
        android:layout_marginTop="16dp"/>
    <ToggleButton
        android:id="@+id/showByCategory"
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/toggle_button"
        android:textOn="CATEGORY"
        android:textOff="CATEGORY"
        android:textColor="@color/toggle_text"
        android:textSize="12dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/filterByText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILTER BY"
        android:textColor="#fff"
        android:textSize="14dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"/>

    <View
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/venueFilter"
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button"
        android:text="VENUE"
        android:textColor="@color/button_text"
        android:textSize="12dp"
        android:layout_marginTop="16dp"/>
    <Button
        android:id="@+id/categoryFilter"
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button"
        android:text="CATEGORY"
        android:textColor="@color/button_text"
        android:textSize="12dp"
        android:layout_marginTop="8dp"/>
    <ToggleButton
        android:id="@+id/ongoingFilter"
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/toggle_button"
        android:textOn="ONGOING"
        android:textOff="ONGOING"
        android:textColor="@color/toggle_text"
        android:textSize="12dp"
        android:layout_marginTop="8dp"/>
    <ToggleButton
        android:id="@+id/favouritesFilter"
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/toggle_button"
        android:textOn="FAVOURITES"
        android:textOff="FAVOURITES"
        android:textColor="@color/toggle_text"
        android:textSize="12dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/apply"
            android:layout_width="110dp"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"
            android:text="Apply"
            android:textColor="@color/button_text"
            android:textSize="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/clear"
            android:layout_width="110dp"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"
            android:text="CLEAR"
            android:textColor="@color/button_text"
            android:textSize="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

</LinearLayout>