<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/profileDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone">

    <ProgressBar
        android:id="@+id/progress1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:indeterminate="true"
        android:indeterminateTint="#0CA9EF"
        android:max="100"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/qrcodeImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="28dp"
        android:text="NAME"
        android:textAllCaps="true"
        android:layout_marginTop="12dp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/who"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="14dp"
        android:textAllCaps="true"
        android:text="BITSIAN/OUTSTEE"
        android:textColor="#000"/>


    <TextView
        android:id="@+id/qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="14dp"
        android:text="QR Code: "
        android:textColor="#000"/>


    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0CA9EF"
            android:text="event signings"
            android:textAllCaps="true"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/signedEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Signed Events"
            android:textColor="#0CA9EF"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textSize="16dp"/>
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/logout"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@drawable/profile_button"
        android:textColor="#0CA9EF"
        android:text="logout"
        android:textAllCaps="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>

    <FrameLayout
        android:id="@+id/loggedOutMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOU ARE NOT LOGGED IN
Please login to access QR Code"
            android:textSize="18dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/signIn"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@drawable/profile_button"
            android:textColor="#0CA9EF"
            android:text="Log IN"
            android:textAllCaps="true"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"/>
    </FrameLayout>
</FrameLayout>